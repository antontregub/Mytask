<Window x:Class="myproject.AddForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myproject"
        mc:Ignorable="d"
        Title="AddForm" Height="200" Width="300">
    <Grid>
        <StackPanel   Margin="0 15 0 0" >
            <TextBlock x:Name="lblName" Text="Name" HorizontalAlignment="Center"></TextBlock>
            <TextBox x:Name="txtName" Width="190"></TextBox>
            <TextBlock x:Name="lblAddress" Text="Position" HorizontalAlignment="Center"></TextBlock>
            <TextBox x:Name="txtAddress" Width="190"></TextBox>
            <TextBlock x:Name="lblBirthday" Text="Birthday" HorizontalAlignment="Center"></TextBlock>
            <DatePicker Name="datePicker1" IsDropDownOpen="False" SelectedDateFormat="Short" Width="190"/>
            <Button Content="Add" MaxWidth="70" Margin="10 5 0 0" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
